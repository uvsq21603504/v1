<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style2.css">
</head>

  <body>
    <h1>Register</h1>
    <ul>
      <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
      <li><%= error.message %></li>
      <% }) %> <% } %>
    </ul>
    <!-- DÃ©but forme du register de notre site -->
    <div class="login-page">
        <div class="form">
            <form id="myForm" action="/users/register" method="POST">
                    <div class="registerbox">
                        <form action="/user_create" method="POST">
                            <input type="text" id="name" name="name" placeholder="Enter Last Name" required>
                             <input type="email" id="email" name="email" placeholder="Enter Email ID"  pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$"  required>
                             <input type="password" id="password" name="password" placeholder="Enter Password" required>
                             <input type="password" id="password2" name="password2" placeholder="Retype Password" required>
                            <input class="but" type="submit" id="btnSubmit" value="Register"/>
                            <a href="/users/login">Already registered? Login here</a>
                </div>
            </form>
        </div>
      </div>
    <!-- Fin forme du register de notre site -->

</body>
</html>